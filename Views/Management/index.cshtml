@model IEnumerable<ManagementModel> 
@{
    ViewData["Title"] = "Início";
}

<div class="container">
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Usuários</h2>
  <a asp-controller="Management" asp-action="Create" class="btn btn-success mx-2">Cadastrar gestor</a>
</div>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Cargo</th>
        <th>Salário</th>
        <th>Data de última atualização</th>
      </tr>
    </thead>

    @if(Model != null && Model.Any())
    {
      <tbody>
        @foreach(var manager in Model)
        {
          <tr>
            <td>@manager.Id</td>
            <td>@manager.Name</td>
            <td>@manager.Role</td>
            <td>@manager.Salary</td>
            <td>@manager.UpdateAt</td>
            <td><a asp-controller="Management" asp-route-id="@manager.Id" asp-action="Edit" class="btn btn-warning mx-2">Editar</a></td>
            <td><a asp-controller="Management" asp-route-id="@manager.Id" asp-action="Delete" class="btn btn-danger mx-2">Excluir</a></td>
          </tr>
        }
      </tbody>
    }
    else
    {
      <tbody>
        <tr>
          <td colspan="5" class="fw-bold">Sem Registros</td>
        </tr>
      </tbody>
    }    
  </table>
</div>

</div>
